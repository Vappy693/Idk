on-arrival: {!
if (Q.advisor_action_timer <= 0) {
    Q.pinnedCardsDescription = 'Advisors - an action is available.';
} else if (Q.advisor_action_timer == 1) {
    Q.pinnedCardsDescription = 'Advisors - next action available in 1 month.';
} else {
    Q.pinnedCardsDescription = 'Advisors - next action available in ' + Q.advisor_action_timer + ' months.';
}
if (Q.year >= 1930 && Q.year < 1933 && Q.next_election_time - Q.time < 4 && Q.dnvp_ideology == "Radical") {
    Q.flavour_0_trigger += 1;
    if (Q.flavour_0_trigger == 1) {
        Q.flavour_0_trigger_time = Q.time;
    }
}
if (Q.year >= 1930 && Q.year < 1933 && Q.next_election_time - Q.time < 5) {
    Q.flavour_1_trigger += 1;
    if (Q.flavour_1_trigger == 1) {
        Q.flavour_1_trigger_time = Q.time;
    }
}
if (Q.next_election_time - Q.time < 5 && Q.dnvp_split_2 == 1 && Q.year >= 1930) {
    Q.flavour_2_trigger += 1;
    if (Q.flavour_2_trigger == 1) {
        Q.flavour_2_trigger_time = Q.time;
    }
}
if (Q.next_election_time - Q.time < 5 && Q.dnvp_split_2 == 1 && Q.year >= 1930 && Q.flavour_2_trigger > 1) {
    Q.flavour_3_trigger += 1;
    if (Q.flavour_3_trigger == 1) {
        Q.flavour_3_trigger_time = Q.time;
    }
}
if (Q.spd_in_government && Q.hindenburg_angry >= 100 && Q.president == "Hindenburg") {
    Q.flavour_4_trigger += 1;
    if (Q.flavour_4_trigger == 1) {
        Q.flavour_4_trigger_time = Q.time;
    }
    if (Q.flavour_4_trigger >= 3) {
        Q.flavour_4_trigger = 0;
    }
}
if (Q.in_grand_coalition && Q.liberal_vote < 13 && Q.peoples_party_support >= 2 && (!Q.in_right_coalition && !Q.in_weimar_coalition) && Q.next_election_time - Q.time >= 3) {
    Q.flavour_5_trigger += 1;
    if (Q.flavour_5_trigger == 1) {
        Q.flavour_5_trigger_time = Q.time;
    }
}
!}
on-display: {!
var button = document.createElement('button');
button.style.backgroundColor = '#dddddd';
button.className = 'tab_button';
button.id = 'news_tab';
button.textContent = 'View Right-Wing News';
button.onclick = function () {
    toggleNews();
};
var contentDiv = document.getElementById('content');
contentDiv.appendChild(button);
const elements = document.querySelectorAll('.dnvp');
let hasTextContent = false;
elements.forEach(function (element) {
    if (element.textContent.trim() !== '') {
        hasTextContent = true;
    }
});
if (hasTextContent) {
    button.style.backgroundColor = 'rgba(255, 0, 0, 0.5)'; // New color
} else {
    button.style.backgroundColor = '#dddddd'; // Original color
}
document.querySelectorAll('p').forEach(p => {
  if (!p.textContent.trim()) {
    p.remove(); // Remove the element
  }
});
!}
